int ledPin = 11;

int scale(int val)
{
  return (int)((val / 1024.0) * 255.0);
}

void setup() {
  // put your setup code here, to run once:
  Serial.begin(9600);


  pinMode(ledPin, OUTPUT);
  
}

void loop() {
  // put your main code here, to run repeatedly:
  int val = analogRead(A0);

  analogWrite(ledPin, scale(val));
  
  Serial.println(val);
  delay(500);
}

